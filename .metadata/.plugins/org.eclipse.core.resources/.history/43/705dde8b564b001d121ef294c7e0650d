package com.mipresupuesto.personalbudget.entity;


public final class BudgetEntity {
	
	private YearEntity year;
	private PersonEntity person;
	
	
	public BudgetEntity(YearEntity year, PersonDTO person) {
		setYear(year);
		setPerson(person);
	}
	
	public BudgetDTO() {
        setYear(YearDTO.create());
        setPerson(PersonDTO.create());
    }
	
	public final YearDTO getYear() {
		
		return year;
	}
	public final void setYear(YearDTO year) {
		this.year = year;
	}
	public final PersonDTO getPerson() {
		if (person == null) {
			setPerson(PersonDTO.create());
			
		}
		return person;
	}
	public final void setPerson(PersonDTO person) {
		this.person = person;
	}

}
